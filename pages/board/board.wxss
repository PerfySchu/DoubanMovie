
.slide swiper {
  height: 400rpx;
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.board {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.board-item {
  background: #eee;
  display: flex;
  flex: 1;
  border: 1rpx solid #eee;
  margin-top: 20rpx;
  padding: 30rpx;
  cursor: pointer;
}

.board-item text {
  flex: 1;
}
.board-item image {
  width: 40rpx;
  height: 40rpx;
}